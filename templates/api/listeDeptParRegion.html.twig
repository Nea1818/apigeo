{% extends 'base.html.twig' %} {% block title %}Liste des Départements par
Régions{% endblock %} {% block body %}

<div class="container">
  <h2 class="my-5">Liste des Départements</h2>
  <form action="" method="GET">
    <div class="row">
      <div class="col-md-10">
        <div class="form-group">
          <select class="form-control" name="region" id="region">
            <option value="Toutes">Toutes les régions</option>
            {% for maRegion in mesRegions %}
            <option value="{{ maRegion.code }}" {% if app.request.query.get("region") == maRegion.code %} selected{% endif %} >{{ maRegion.nom }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">
          Rechercher
        </button>
      </div>
    </div>
  </form>
  <div class="row my-3 ">
    {% for monDept in mesDepts %}
    <div class="col-sm-4">
      <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
        <div class="card-header">{{ monDept.code }}</div>
        <div class="card-body">
          <h4 class="card-title">{{ monDept.nom }}</h4>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% endblock %}
